<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.masukami.minecraftcraftmate.BasicFragment">

    <!-- TODO: Update blank fragment layout -->

    <TableLayout
        android:padding="25dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tools Recipes"
                android:id="@+id/tvBasicTitle" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ibPickaxe"
                android:background="@drawable/img_pickaxes"/>

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibShovel"
                android:background="@drawable/img_shovels"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibAxe"
                android:background="@drawable/img_axes"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibHoes"
                android:background="@drawable/img_hoes"
                android:layout_weight="1" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibFlintNSteel"
                android:background="@drawable/img_flintandsteel"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibFishRod"
                android:background="@drawable/img_fishingrod"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibShears"
                android:background="@drawable/img_shears"
                android:layout_weight="1" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibBucket"
                android:background="@drawable/img_bucket"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibClock"
                android:background="@drawable/img_clock"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibCompass"
                android:background="@drawable/img_compass"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibMap"
                android:background="@drawable/img_map"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

</FrameLayout>
