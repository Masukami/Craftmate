                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibMoss"
                android:background="@drawable/img_mossstone"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibMossyBrick"
                android:background="@drawable/img_mossystonebrick"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibChiseledStone"
                android:background="@drawable/img_chiseledstonebrick"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibRedSandstone"
                android:background="@drawable/img_redsandstone"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibSmoothRedSandstone"
                android:background="@drawable/img_smoothredsandstone"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/ibChiseledRedSandstone"
